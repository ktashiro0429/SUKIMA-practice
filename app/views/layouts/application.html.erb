<!DOCTYPE html>
<html>
<head>
  <title>Sukima career</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="header">
  <div class="fixed">
    <div class="header_left">
      <h1 class="logo"><%= link_to 'SUKIMA', root_path %></h1>
    </div>
   

<!--学生ログイン時-->
    <% if user_signed_in? %>
    <div class="header_right_guest header_right"> 
      <ul>
        <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <li><%= link_to 'マイページ', current_user %></a></li>
        <li><a href="#">チャット</a></li>
        <li><a><%= link_to '投稿', :new_entry %></a></li>
        <!--<strong>< link_to current_user.username, pages_show_path %></strong>-->
      </ul>
    </div>
<!--企業ログイン時-->
  <% elsif admin_signed_in? %>
    <div class="header_right_guest header_right">
      <ul>
        <li><%= link_to 'プロフィール変更', edit_admin_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
        <li><a><%= link_to 'マイページ', current_admin %></a></li>
        <li><a href="#">チャット</a></li>
      </ul>
    </div>
<!--<strong>link_to current_admin.username, pages_show_path %></strong>-->
  <% else %>
    <div class="header_right_guest header_right">
      <ul>
        <li><%= link_to '法人ログイン', new_admin_session_path %></li>
        <li><%= link_to "Facebookログイン", user_facebook_omniauth_authorize_path %></li>
         <li><%= link_to '個人会員登録', new_user_registration_path %></li>
        <li><%= link_to '個人ログイン', new_user_session_path %></li>
      </ul>
   </div>
  <% end %>
</div>
</div>
<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
  
</div>
</div>
<footer>
   <p>SUKIMA All right reserved.</p>
</footer>
</body>
</html>
