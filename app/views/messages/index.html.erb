<style>
  * {
      margin: 0;
      padding: 0;
  }
  .main{
    height: 100%;
    width: 100%;
    background-color: white;
  }
  .main_inner{
    height: 100%;
    width: 980px;
    background-color: white;
    margin: 0 auto;
    margin-bottom: 10px;
  }
  .user-messages_head{
    height: 90px;
    width: 100%;
    background-color: #f0ffff;
    margin-bottom: 5px;
  }
  .user-messages-wrapper{
    height: 100%;
    width: 100%;
    background-color: white;

  }
  .user-messages-index-wrapper{
    width: 40%;
    height: 100%;
    float: left;
    background-color: #f0ffff;
  }
  .user-messages-new-container{
    width: 60%;
    height: 100%;
    float: right;
    background-color: #f0f8ff;
  }
  .clearfix:after {
    display: block;
    clear: both;
    content: "";
  }
  .user-messages-thread-avatar{
    left: 30px;
    top: 20px;
    width: 40px;
    height: 40px;
    -webkit-border-radius: 20px;
            border-radius: 20px;
    overflow: hidden;
  }
  li {
    list-style: none;
  }
  .group-box{
    height: 150px;
    width: 360px;
    border: solid #008080;
  }
  .message_user_image img{
  text-align:left;
  width: 70px;
  height: 70px;
  /*top:20px;*/
  /*margin: -35px auto;*/
  border-radius: 40px;
  background-color: black;
} 
</style>

<div class="main">
  <div class="main_inner clearfix">
    <div class="user-messages_head">
      <div id="">
        <p>ユーザーのアイコンを左寄せで表示</p> 
      </div>
    </div>
    <div class="user-messages-wrapper">
      <div class="user-messages-index-wrapper">
        <div class="user-messages-single-inner">
          <ul class="groups">
            <% @groups.each do |group| %>
              <li>
                <a href="/groups/<%= group.id %>/messages" title="">
                  <div class="group-box">
                    <div class="message_user_image">
                    <%= image_tag group.user.image %>
                    </div>
                    <% if current_user.nil? %>
                      <p><%= group.user.name %><p>
                    <% else %>
                      <p><%= group.admin.name %><p>
                    <% end %>
                    <% if group.messages.exists? %>
                      <% if group.messages.last.admin_id? %>
                        <p><%= group.messages.last.admin.name %>
                      <% else %>
                        <p><%= group.messages.last.user.name %>
                      <% end %>
                      :<%= group.messages.last.message %></p>
                    <% else %>
                      <p>メッセージはありません。</p>
                    <% end %>
                  </div>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class=user-messages-new-container ">
        <ul class="user-messages-threads">
          <li>
            <div class="user-messages-thread-body">
              <% if @group.messages.empty? %>
                <p>履歴なし</p>
              <% else %>
                <% @group.messages.each do |message| %>
                  <% if message.user_id.blank? %>
                    <p><%= message.admin.name %></p>
                    <p><%= message.message %></p>
                    <% unless current_admin.nil? %>
                      <% if current_admin.id == message.admin_id %>
                        <%= link_to "編集", edit_group_message_path(@group, message) %>/
                        <%= link_to "削除", "/groups/#{message.group_id}/messages/#{message.id}", method: :delete  %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <img src="<% message.user.image %>" alt="" >
                    <p><%= message.user.name %></p>
                    <p><%= message.message %></p>
                    <% unless current_user.nil? %>
                      <% if current_user.id == message.user_id %>
                        <%= link_to "編集", edit_group_message_path(@group, message) %>/
                        <%= link_to "削除", "/groups/#{message.group_id}/messages/#{message.id}", method: :delete  %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </li>
        </ul>
        <%= form_for [@group, @message] do |f| %>
          <div class="field">
            <%= f.label :message %>
            <%= f.text_field :message %>
          </div>
          <div class="actions">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

